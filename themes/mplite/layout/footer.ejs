<section class="container	bg-blue-bottom	form-group">
	<form method="post" action="/newsletter/register">
		<div class="col-sm-12	col-md-4	row	form-group	section-heading">
			Subscribe to our weekly Newsletter
		</div>
		<div class="col-sm-4	col-md-2	form-group">
			<input type="text" name="FNAME" placeholder="First Name" class="form-control" required />	
		</div>
		<div class="col-sm-4	col-md-2	form-group">
			<input type="text" name="LNAME" placeholder="Last Name" class="form-control" required />	
		</div>
		<div class="col-sm-4	col-md-2	form-group">
			<input type="text" name="EMAIL" placeholder="Contact Email" class="form-control" required />	
		</div>
		<div class="col-sm-4	col-md-2	form-group">
			<input type="submit" value="Subscribe" class="form-control">	
		</div>
		<div class="clearfix"></div>
	</form>
</section>

<section class="container	text-right">
	<%	globalLocals.socialMedia.forEach(function(smInfo)	{	%>
		<a href="<%=	smInfo.url	%>" title="<%=	smInfo.name	%>">
			<img src="/assets/mplite/images/social/<%=	smInfo.name.replace(' ', '-')	%>.png" alt="" width="32" />
		</a>
		&nbsp;
	<%	});	%>
</section>
<div class="clearfix"></div>

<footer>
	<div class="container">
    	<div class="col-sm-6 col-md-6 copyright">
        	&copy; Copyright 2014 - Mopublish MPLite Theme
        </div>
        
        <div class="col-sm-6 col-md-6">
        	<div class="menu-footer-column-1-container">
        		<ul id="menu-footer-column-1" class="footerMenu">
        			<li id="menu-item-16" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-16">
        				<a href="/about-us">About Us</a>
        			</li>
					<li id="menu-item-14" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-14">
						<a href="/privacy-policy">Privacy Policy</a>
					</li>
					<li id="menu-item-15" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-15">
						<a href="/terms-of-service">Terms of Service</a>
					</li>
					<li id="menu-item-13" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-13">
						<a href="/contact-us">Contact Us</a>
					</li>
				</ul>
			</div>
		</div>
        <div class="clearfix"></div>
	</div>
	
	<%-	mp.template.getFooter()	%>
</footer>